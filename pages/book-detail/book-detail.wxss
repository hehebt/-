.ex_tag1 {
    background-color: #fffbdd !important;
}

.ex_tag2 {
    background-color: #effbff !important;
}

.content {
    text-indent: 48rpx;
    font-size: 30rpx;
}

.detail_container {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    font-size:28rpx;
    color: #666;
}

.vertical {
    display: flex;
    flex-direction: column;
}

.description {
    color: #999;
    margin-right: 30rpx;
}

/* 输入短评 */
.post_container {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    bottom: 0;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
}

.post_fake {
    display: flex;
    align-items: center;
    height: 60rpx;
    width: 460rpx;
    border: 1px solid #2f2f2f;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.like_container{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.like {
    margin: 10rpx 30rpx 0 0;
}



/* 输入短评界面 */
.posting_container {
    bottom: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    width: 100%;
    z-index: 999;
}

.post_header {
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cancel {
    color: #666666;
}
.post_header text {
    padding: 25rpx;
}
.post_header>text:first-child {
    font-size: 28rpx;
    color: #bbbbbb;
}

.post_container .comment_container {
    box-sizing: border-box;
    width: 100%;
    padding: 40rpx 30rpx 0 30rpx;
}
.post {
    width: 100%;
    box-sizing: border-box;
    margin: 30rpx auto;
    height: 56rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}

.shadow {
    color: #999999;
}

.share_btn {
    margin: 28rpx 0 10rpx 0
}
.share {
    width: 40rpx;
    height: 40rpx;
}