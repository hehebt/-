/* pages/book-detail/book-detail.wxss */
.container {
    background-color: #f5f5f5;
    width: 100%;
}

.head {
    background-color: #fff;
    padding: 0 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}
.author {
    font-size: 24rpx;
    color: #999999;
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.sub_container {
    width: 690rpx;
    min-height: 180rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}
.comment_container {
    display: flex;
    flex-wrap: wrap;
}
.comment_container l-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
    font-size: 24rpx;
}
.num {
    margin-left: 5px;
    font-size: 22rpx;
    color: #aaaaaa;
}

